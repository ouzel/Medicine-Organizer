        <item name="colorPrimary">#206D4E</item>
        <item name="colorPrimaryVariant">#206D4E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFAA5E</item>
